{
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "none",
    "endOfLine": "lf",
    "apexInsertFinalNewline": false,
    "overrides": [
        {
            "files": "**/lwc/**/*.html",
            "options": { "parser": "lwc", "printWidth": 120 }
        },
        {
            "files": "*.{cmp,page,component,xml}",
            "options": { "parser": "html", "printWidth": 240 }
        }
    ]
}
